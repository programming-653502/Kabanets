<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="OrganizerTabDateText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OrganizerTabDaysText">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="OrganizerNothingError">
        <item name="android:color">@android:color/darker_gray</item>
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="OrganizerPageItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="OrganizerPageItemDayNumber">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorTitleText</item>
    </style>

    <style name="OrganizerCardViewCommon">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">4dp</item>
    </style>

    <style name="OrganizerCardViewEntry" parent="OrganizerCardViewCommon">
        <item name="android:layout_marginBottom">2dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <style name="OrganizerEntryTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

</resources>
